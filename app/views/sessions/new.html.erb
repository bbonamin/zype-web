<div class="row">
  <div class="col-sm-offset-2 col-sm-10">
    <h1 class="page-title">Sign in to Zype</h1>
    <p>In order to access some of the content, a subscription is required.</p>
    <p>Please sign in with your Zype credentials to continue, or click <%= link_to 'here', videos_url %> to go back to the video list.</p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= form_tag('/sessions', class: 'form-horizontal') do %>
      <div class="form-group">
        <%= label_tag 'username', nil, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= text_field_tag 'username', nil, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag 'password', nil, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= password_field_tag 'password', nil, class: 'form-control' %>
        </div>
      </div>

      <%= hidden_field_tag 'origin_video_id', @origin_video_id %>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= submit_tag 'Log in', class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>

  </div>
</div>
